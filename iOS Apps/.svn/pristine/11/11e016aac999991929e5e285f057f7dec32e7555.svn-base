 #define kLongDateTimeFormat @"MM/dd/yyyy h:mm:ss a"
 #define kDefaultTimeFormat @"h:mm:ss a"
#else
 #define kLongDateTimeFormat @"MM/dd/yyyy   h:mm a"
 #define kDefaultTimeFormat @"h:mm a"
